@inherits StyledHtmlComponent
<div class="backdrop" @onclick="Canceled">
    <div @attributes="Attributes" class="@GetClassName("modal")" @onclick:stopPropagation @oncontextmenu:stopPropagation>
        <h3 class="modal-title">@Title</h3>
        @Content
        <div class="buttons">
            @Actions
        </div>
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment Title { get; set; }

    [Parameter]
    public RenderFragment Actions { get; set; }

    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public EventCallback Canceled { get; set; }
}
