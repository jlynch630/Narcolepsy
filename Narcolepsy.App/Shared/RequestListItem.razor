@using Narcolepsy.Platform.Rendering;
@inherits ContextSensitiveComponent<IRequestContext>

<div class="request-list-item@(IsActive ? " active" : "")" @onclick="OnClick">@Request.Context.Name.Value</div>

@code {
    [Parameter]
    public Request Request { get; set; }

    [Parameter]
    public bool IsActive { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    protected override void OnInitialized() {
        base.OnInitialized();
        this.UpdateOnChange(ctx => ctx.Name);
    }
}
